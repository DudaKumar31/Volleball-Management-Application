<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activities.AddScheduleActivity">



    <TextView
        android:text="Select Team One"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/spin_teamone"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edit_text_rounded"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:spinnerMode="dropdown"/>



    <TextView
        android:text="Select Team Two"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/spin_teamtwo"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edit_text_rounded"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:spinnerMode="dropdown"/>



    <TextView
        android:text="Select Season"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/spin_selectseason"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edit_text_rounded"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:spinnerMode="dropdown"/>



    <TextView
        android:text="Select Date"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etSDate"
        android:focusable="false"
        android:hint="Select Schedule Date"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/edit_text_rounded"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_schduleSubmit"
        android:text="Submit"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/button1_rounded" />

</LinearLayout>