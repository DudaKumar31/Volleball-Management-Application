<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_team_name"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/team_a_logo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />



                <TextView
                    android:textSize="@dimen/_19sdp"
                    android:text="V/s"
                    android:layout_toRightOf="@+id/team_a_logo"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_team_a"
                    android:drawablePadding="4dp"
                    android:layout_below="@+id/team_a_logo"
                    android:text="Montreal"
                    android:padding="@dimen/_10sdp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />







                <ImageView
                    android:id="@+id/team_b_logo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_team_b"
                    android:text="Toronto"
                    android:layout_below="@+id/team_b_logo"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_10sdp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_date"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:layout_below="@+id/team_a_logo"
                android:text="Date"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <TextView
                android:id="@+id/tv_result"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:layout_below="@+id/team_a_logo"
                android:text="Match Result"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
