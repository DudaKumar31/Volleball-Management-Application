<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_team1_score"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Team1 Score"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etTeam1Score"
        android:background="@drawable/edit_text_rounded"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_team2_score"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Team2 Score"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etTeam2Score"
        android:background="@drawable/edit_text_rounded"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Result"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etResult"
        android:editable="false"
        android:background="@drawable/edit_text_rounded"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/button1_rounded"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/btnresultget"
            android:textColor="#ffffff"
            android:layout_margin="@dimen/_8sdp"
            android:text="Get Result"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/button1_rounded"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/btnAddResult"
            android:layout_margin="@dimen/_8sdp"
            android:text="Add Result"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/button1_rounded"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/btnTeam1"
            android:layout_weight="1"
            android:layout_margin="@dimen/_8sdp"
            android:text="Team1"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/button1_rounded"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/btnTeam2"
            android:layout_weight="1"
            android:layout_margin="@dimen/_8sdp"
            android:text="Team2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>